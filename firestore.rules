rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Settings collection - anyone can read (for whitelist check), only admins can write
    match /settings/{document} {
      allow read: if true;
      allow write: if request.auth != null && 
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Users collection - authenticated users can read all, write only their own
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Pricing Catalog - authenticated users can read, only admins can write
    match /pricingCatalog/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Quotes - authenticated users can read and write
    match /quotes/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // All other collections - require authentication
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
